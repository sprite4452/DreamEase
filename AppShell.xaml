<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DreamEase.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DreamEase"
    xmlns:views="clr-namespace:DreamEase.Views"
    xmlns:ic="clr-namespace:CustomIconFont"
    >
    <TabBar>
        <ShellContent
            Title="HOME"
            Route="Home"
            ContentTemplate="{DataTemplate views:Home}"
            Icon="{FontImage FontFamily=Icon, Glyph={x:Static ic:IconFont.Home}}"
            />
        <ShellContent
            Title="MUSIC"
            Route="MusicListPage"
            ContentTemplate="{DataTemplate views:MusicListPage}"
            Icon="{FontImage FontFamily=Icon, Glyph={x:Static ic:IconFont.My_library_music}}"
            />
        <ShellContent
            Title="HISTORY"
            Route="History"
            ContentTemplate="{DataTemplate views:HistoryPage}"
            Icon="{FontImage FontFamily=Icon, Glyph={x:Static ic:IconFont.History}}"
            />
        
    </TabBar>
</Shell>
